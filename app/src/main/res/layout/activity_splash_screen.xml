<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreendesign"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/appnamelogo"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />
    
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:min="0"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:max="100"
        android:layout_marginBottom="180dp"
        android:id="@+id/splash_screen_activity_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintBottom_toBottomOf="parent"  />
        <!-- 8.  PROGRESS BAR'A STİL VERDİm
        soru miktarına göre progress bar dolacak
        bu yüzden veritabanı oluşturmamız gerekir-->

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/splashScreenTextColor"
        android:layout_height="wrap_content"
        android:text="Durun"
        android:id="@+id/splash_screen_activity_textViewState"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/splash_screen_activity_progressBar"
        app:layout_constraintLeft_toLeftOf="@+id/splash_screen_activity_progressBar"
        app:layout_constraintRight_toRightOf="@+id/splash_screen_activity_progressBar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>